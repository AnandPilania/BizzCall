<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bizcall.wayto.mentebit13.LeaveReport">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar_background"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="@color/white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/linerlayout_border_round"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_black_24dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/txtActivitywithStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="Leave Report"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgCoin"
                android:layout_width="35dp"
                android:layout_height="47dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:visibility="gone"
                android:src="@drawable/dollar" />

            <TextView
                android:id="@+id/txtCoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="51dp"
                android:layout_marginRight="51dp"
                android:gravity="top|start"
                android:paddingLeft="0dp"
                android:paddingTop="8dp"
                android:paddingRight="0dp"
                android:paddingBottom="5dp"
                android:text="0"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imgRefresh"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/reload" />
        </RelativeLayout>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/diamond"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtDiamond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:paddingTop="10dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:visibility="gone" />

    </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:id="@+id/txtPending"
                    android:background="@color/dashboard_background"
                    android:textColor="@color/black"
                    android:text="Pending"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/light_gray"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:id="@+id/txtApproved"
                    android:textColor="@color/black"
                    android:text="Approved"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/light_gray"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:id="@+id/txtRejected"
                    android:textColor="@color/black"
                    android:text="Rejected"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/light_gray"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:id="@+id/txtHold"
                    android:textColor="@color/black"
                    android:text="Hold"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/light_gray"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/linearPendingApproval">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="11dp"/>

            <TextView
                android:id="@+id/txtLeaveID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="LeaveID"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="11dp"/>


            <TextView
                android:id="@+id/txtDateFrom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="DateFrom"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="11dp"/>


            <TextView
                android:id="@+id/txtDateTo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="DateTo"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="11dp"/>


            <TextView
                android:id="@+id/txtTotalDays"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:visibility="visible"
                android:textColor="@color/black"
                android:text="TotalDays"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="11dp"/>

            <TextView
                android:id="@+id/txtApplicationDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:visibility="visible"
                android:textColor="@color/black"
                android:text="AppliedDate"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="11dp"/>
                <TextView
                    android:id="@+id/txtRemarks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:visibility="visible"
                    android:textColor="@color/black"
                    android:text="Remarks"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="11dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:padding="10dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerPendingApproval"></androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/txtNoAppliedLeaves"
            android:text="No Applied leaves"
            android:textColor="@color/red"
            android:textSize="22dp"
            android:visibility="gone"
            android:gravity="center"/>
    </LinearLayout>
        </ScrollView>
        </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:src="@drawable/ic_add_white_24dp" />




</androidx.coordinatorlayout.widget.CoordinatorLayout>
