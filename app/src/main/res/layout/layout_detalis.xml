-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Sr.No:"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#d3d3d3"
                    android:textSize="15dp" />

                    <TextView
                    android:id="@+id/txtSrno11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:textColor="@color/black"
                    android:paddingBottom="5dp"
                    android:textSize="15dp" />
                <!--</LinearLayout>-->

               <!-- <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp">-->

                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Course:"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#d3d3d3"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtCourse11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
               <!-- </LinearLayout>-->
                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp">-->

                    <TextView
                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Phone No:"
                        android:textColor="#d3d3d3"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtPhone11"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

               <!-- <View android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@color/blue_text"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"/>-->

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Parent No:"
                        android:textColor="#d3d3d3"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtParentNo11"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/black"
                        android:textSize="15dp" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Name:"
                    android:paddingTop="8dp"
                    android:paddingBottom="5dp"
                    android:textColor="#d3d3d3"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtName11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Address:"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#d3d3d3"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtAddress11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                   >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="City:"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#d3d3d3"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtCity11"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="15dp" />



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pin Code:"
                    android:paddingTop="5dp"
                   android:layout_marginLeft="10dp"
                    android:paddingBottom="5dp"
                    android:textColor="#d3d3d3"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtPinCode11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Email Id:"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#d3d3d3"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtEmail11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="State:"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#d3d3d3"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtState11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </TableLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btnEditDetails"
                android:background="@color/blue_text"
                android:text="Edit Details"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <Button
                android:layout_marginLeft="5dp"
                android:id="@+id/btnOk11"
                android:layout_width="0dp"
                android:text="Ok"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/blue_text"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginRight="7dp"
                android:textSize="15dp" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>