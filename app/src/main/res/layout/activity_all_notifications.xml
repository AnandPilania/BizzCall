<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bizcall.wayto.mentebit.AllNotifications">
       <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
           <android.support.v7.widget.Toolbar
               android:id="@+id/toolbar1"
               android:layout_width="fill_parent"
               android:layout_height="58dp"
               android:background="#0090bf"
               android:minHeight="?attr/actionBarSize"
               android:titleTextColor="#ffff">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"

                   android:orientation="horizontal">

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"

                       android:background="@drawable/linerlayout_border_round"
                       android:orientation="horizontal">
                       <ImageView
                           android:id="@+id/img_back"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/ic_arrow_back_black_24dp" />
                   </LinearLayout>

                   <TextView
                       android:id="@+id/txtActivity"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="20dp"
                       android:layout_marginTop="10dp"
                       android:text="All Notifications"
                       android:textColor="@color/white"
                       android:textSize="20dp"
                       />
                   <ImageView
                       android:layout_width="21dp"
                       android:layout_height="25dp"
                       android:layout_marginTop="10dp"
                       android:layout_marginLeft="130dp"
                       android:layout_marginRight="5dp"
                       android:src="@drawable/reload"
                       android:id="@+id/imgRefresh"/>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:orientation="vertical">

                       <TextView
                           android:id="@+id/txtMin"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="7dp"
                           android:text=""
                           android:textColor="@color/white"
                           android:textSize="8dp"
                           android:visibility="gone" />

                       <TextView
                           android:id="@+id/txtMax"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="7dp"
                           android:text=""
                           android:textColor="@color/white"
                           android:textSize="8dp"
                           android:visibility="gone" />
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginRight="0dp"
                       android:layout_gravity="right">
                       <TextView
                           android:id="@+id/txtDisplayInfo"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="30dp"
                           android:layout_marginLeft="0dp"
                           android:layout_marginRight="0dp"
                           android:layout_marginBottom="0dp"
                           android:text=""
                           android:textColor="@color/white"
                           android:textSize="8dp" />
                   </LinearLayout>


               </LinearLayout>
           </android.support.v7.widget.Toolbar>
           <ScrollView
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

               <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/txtNoNotifications"
               android:text="No Notifications"
               android:textSize="25dp"
               android:visibility="gone"
               android:layout_marginTop="100dp"
               android:textColor="@color/red"
               android:gravity="center"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:id="@+id/recyclerNotification"></android.support.v7.widget.RecyclerView>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               >
               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=""
                   android:textSize="17dp"
                   android:visibility="gone"
                   android:background="@color/off_white"
                   android:drawableLeft="@drawable/previous"
                   android:textColor="@color/white"
                   android:id="@+id/btnPrevious"/>

               <Button
                   android:id="@+id/btnNext"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:text=""
                   android:background="@color/off_white"
                   android:textColor="@color/white"
                   android:textSize="17dp"
                   android:visibility="gone"
                   android:drawableRight="@drawable/next"/>
           </RelativeLayout>
               </LinearLayout>
           </ScrollView>
    </LinearLayout>
</LinearLayout>
