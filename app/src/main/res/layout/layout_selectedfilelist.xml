<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.Light">

           <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:background="#0090bf"
            android:minHeight="?attr/actionBarSize"
            android:titleTextColor="#ffff">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/linerlayout_border_round"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_back"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_back_black_24dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtActivitywithStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Selected Files"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    />

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


        <TextView
            android:id="@+id/txtListSelectedFiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/cyan_text"
            android:lineSpacingExtra="20dp"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <Button
            android:layout_marginLeft="8dp"
            android:id="@+id/btnUpload"
            android:layout_width="wrap_content"
            android:text="Upload"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="#0090bf"
            android:layout_marginRight="7dp"
            android:textSize="15dp" />
    </LinearLayout>
        </ScrollView>
</LinearLayout>