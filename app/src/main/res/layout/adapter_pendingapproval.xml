<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="0dp"
        android:id="@+id/linearLeaveDetails">
        <ImageView
            android:id="@+id/imgCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/ic_close_red_24dp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/txtLeaveID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="11dp"/>


        <TextView
            android:id="@+id/txtDateFrom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="vvcv"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="11dp"/>


        <TextView
            android:id="@+id/txtDateTo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="vfdvd"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="11dp"/>


        <TextView
            android:id="@+id/txtTotalDays"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:visibility="visible"
            android:textColor="@color/black"
            android:text="vvdvv"
            android:textAlignment="center"
            android:textSize="11dp"/>

        <TextView
            android:id="@+id/txtApplicationDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:visibility="visible"
            android:textColor="@color/black"
            android:text="vvdvv"
            android:textAlignment="center"
            android:textSize="11dp"/>
        <TextView
            android:id="@+id/txtRemarks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:visibility="visible"
            android:textColor="@color/black"
            android:text="vvdvv"
            android:textAlignment="center"
            android:textSize="11dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:padding="10dp"/>

</LinearLayout>