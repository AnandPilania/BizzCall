<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:background="@color/blue_text"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/leftarrow" />

            <TextView
                android:id="@+id/txtActivitywithStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:text="Bulk SMS"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:layout_marginLeft="120dp"
                android:src="@drawable/dollar"
                android:id="@+id/imgCoin"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:paddingTop="13dp"
                android:text="0"
                android:paddingRight="3dp"
                android:paddingLeft="0dp"
                android:paddingBottom="5dp"
                android:id="@+id/txtCoin"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:id="@+id/imgDiamond"
                android:layout_marginLeft="15dp"
                android:src="@drawable/diamond"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:visibility="gone"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:id="@+id/txtDiamond"
                android:text="0"
                android:visibility="gone"
                android:textColor="@color/white"
                android:layout_marginLeft="3dp"/>-->
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerFilter1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"></Spinner>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTimer"
        android:textSize="20dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerStatusTotalCnt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</LinearLayout>


