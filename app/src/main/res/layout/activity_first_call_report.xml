<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bizcall.wayto.mentebit.FirstCallReport">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:background="#0090bf"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/linerlayout_border_round"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back_black_24dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtActivitywithStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="First call report"
                android:textColor="@color/white"
                android:textSize="20dp"
                />
            <ImageView
                android:layout_width="21dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"
                android:src="@drawable/reload"
                android:id="@+id/imgRefresh"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="47dp"
                android:layout_marginLeft="100dp"
                android:src="@drawable/dollar"
                android:id="@+id/imgCoin"
                android:visibility="gone"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:paddingTop="13dp"
                android:text="0"
                android:visibility="gone"
                android:paddingRight="3dp"
                android:paddingLeft="0dp"
                android:paddingBottom="5dp"
                android:id="@+id/txtCoin"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/diamond"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:visibility="gone"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:text="0"
                android:id="@+id/txtDiamond"
                android:textColor="@color/white"
                android:layout_marginLeft="3dp"
                android:visibility="gone"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/linearClientVerify">

        <TextView
            android:id="@+id/edtMobileNo"
            android:layout_width="300sp"
            android:layout_height="50sp"
            android:background="@drawable/round_edit_text"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="Mobile number"
            android:inputType="number"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shape_loginbtn"
            android:paddingLeft="5dp"
            android:paddingTop="0dp"
            android:paddingRight="5dp"
            android:paddingBottom="0dp"
            android:text="submit"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollview"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/linearCallColumns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"
                android:id="@+id/table_firstcalltitle">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/table_border"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/black"
                        android:text="CallID"
                        android:id="@+id/txtCallId"
                        android:textAlignment="center"
                        android:textSize="13dp"></TextView>

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/table_border"
                        android:id="@+id/txtCName"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/black"
                        android:text="CounselorName"
                        android:textAlignment="center"
                        android:textSize="13dp"></TextView>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/txtCallDate"
                        android:background="@drawable/table_border"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/black"
                        android:text="Call Date"
                        android:textAlignment="center"
                        android:textSize="13dp"></TextView>

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/txtDuration"
                        android:background="@drawable/table_border"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/black"
                        android:text="Duration"
                        android:textAlignment="center"
                        android:textSize="13dp"></TextView>
                </TableRow>
            </TableLayout>

            <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:id="@+id/recyclerFirstCall">
    </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:id="@+id/txtNoCallMadeMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="No call made yet!!!!"
        android:textColor="@color/red"
        android:textSize="25dp"
        android:visibility="gone" />

</LinearLayout>
