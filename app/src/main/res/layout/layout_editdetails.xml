<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:background="@color/blue_text"
            android:minHeight="?attr/actionBarSize"
            android:titleTextColor="#ffff">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/leftarrow" />

                <TextView
                    android:id="@+id/txtActivitywithStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Edit Details"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    />


            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="true"
                android:scrollbars="none"
                android:focusableInTouchMode="true"
                android:focusable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="7dp">

                    <TextView
                        android:textColor="	#d3d3d3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sr. No.:"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtSrno12"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                  android:layout_marginLeft="7dp"
                   android:layout_marginRight="7dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="	#d3d3d3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Course:"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtCourse12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:layout_marginRight="7dp"
                    android:orientation="horizontal">

                <TextView
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#d3d3d3"
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Phone No:"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtPhone12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:layout_marginRight="16dp"
                    android:paddingBottom="5dp"
                    android:textSize="15dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Name:"
                    android:textColor="#d3d3d3"
                  android:layout_marginLeft="7dp"
                   android:layout_marginRight="7dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="15dp" />



                <EditText
                    android:id="@+id/edtName11"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="5dp"

                    android:textColor="@color/black"
                    android:backgroundTint="@color/blue_text"
                  android:layout_marginLeft="7dp"
                   android:layout_marginRight="7dp"
                    android:paddingBottom="5dp"
                    android:textSize="15dp" />





                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Address:"
                    android:textColor="#d3d3d3"

                  android:layout_marginLeft="7dp"
                   android:layout_marginRight="7dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="15dp" />

                <EditText

                    android:id="@+id/edtAddress11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                  android:layout_marginLeft="7dp"
                   android:layout_marginRight="7dp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/blue_text"
                    android:paddingBottom="5dp"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="City"
                  android:layout_marginLeft="7dp"
                   android:layout_marginRight="7dp"
                    android:paddingTop="5dp"
                    android:textColor="#d3d3d3"

                    android:paddingBottom="5dp"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edtCity11"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="5dp"

                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/blue_text"
                  android:layout_marginLeft="7dp"
                   android:layout_marginRight="7dp"
                    android:textSize="15dp" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Pin. Code"
                    android:paddingTop="5dp"
                  android:layout_marginLeft="7dp"
                   android:layout_marginRight="7dp"
                    android:paddingBottom="5dp"
                    android:textColor="#d3d3d3"

                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/edtPinCode11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLength="6"
                    android:inputType="number"
                  android:layout_marginLeft="7dp"
                   android:layout_marginRight="7dp"

                    android:textColor="@color/black"
                    android:backgroundTint="@color/blue_text"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="15dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Parent No:"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:paddingTop="5dp"
                        android:textColor="#d3d3d3"
                        android:paddingBottom="3dp"
                        android:textSize="15dp" />


                <EditText
                    android:id="@+id/edtParentNo11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLength="10"
                    android:inputType="number"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/blue_text"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Email Id:"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="7dp"
                    android:paddingTop="5dp"
                    android:textColor="#d3d3d3"
                    android:paddingBottom="5dp"
                    android:textSize="15dp" />


                <EditText
                    android:id="@+id/edtEmail11"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="7dp"
                    android:maxLength="100"
                    android:paddingTop="5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/blue_text"
                    android:paddingBottom="5dp"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:layout_weight="0"
                    android:text="Select State:"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="7dp"
                    android:paddingTop="5dp"
                    android:textColor="#d3d3d3"

                    android:paddingBottom="5dp"
                    android:textSize="15dp" />

                <LinearLayout
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="7dp"
                    android:background="@drawable/border">

                    <Spinner
                        android:id="@+id/spinnerState11"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1">

                    </Spinner>
                </LinearLayout>

            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnUpdtDetails"
                android:text="Update "
                android:textColor="@color/white"
                android:background="@color/blue_text"
                android:textSize="15dp" />

            <Button
                android:layout_marginLeft="8dp"
                android:id="@+id/btnCancelUpdate"
                android:layout_width="wrap_content"
                android:text="Cancel"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/blue_text"
                android:layout_marginRight="7dp"
                android:textSize="15dp" />

        </LinearLayout>


    </LinearLayout>


</ScrollView>