<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportActivity"
    android:orientation="vertical"
    android:background="@color/navy_blue">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:background="@color/blue_text"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/leftarrow" />

            <TextView
                android:id="@+id/txtActivitywithStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="Report"
                android:textColor="@color/white"
                android:textSize="20dp"
                />

        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/mrelativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:rotation="-5">

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginLeft="30dp"
            android:background="@android:color/white" />

        <ImageView
            android:id="@+id/img_inuser"
            android:layout_width="235dp"
            android:layout_height="200dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="6dp"
            android:src="@color/colorPrimary" />

        <ImageView
            android:id="@+id/u_logo"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/bizcall1" />

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/impact"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/u_distance1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/agencyfb"
            android:text="01:50Hr TOTAL CALLING\n TIME"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/u_flips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/agencyfb"
            android:text="01:50Hr TOTAL CALLING\n TIME"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/u_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/agencyfb"
            android:text="MOON"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:visibility="gone"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/u_booster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/agencyfb"
            android:text="154: CALLS"
            android:textColor="@android:color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/u_timeair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/agencyfb"
            android:text="124: MESSAGES"
            android:textColor="@android:color/white"
            android:textSize="25dp" />



        <ImageView
            android:id="@+id/img_whatsapp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="210dp"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/img_fb"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="210dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/user_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="208dp"
            android:fontFamily="@font/agencyfb"
            android:text="SHARE"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/agencyfb"
            android:text="REPORT ALL TIME"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textSize="35dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            android:rotation="-3">

            <LinearLayout
                android:id="@+id/mdistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/bidirection"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/u_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/agencyfb"
                    android:text="DISTANCE : 1077m"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mgems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/diamond"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/u_gems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/agencyfb"
                    android:text="+6 GEMS"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mcoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/coin" />

                <TextView
                    android:id="@+id/txtCoins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/agencyfb"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:rotation="-4">

                <TextView
                    android:id="@+id/u_airtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/agencyfb"
                    android:text="80: CONFIRM CLIENT"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/u_flip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/agencyfb"
                    android:text="20: REMINDERS"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:rotation="4">

                <TextView
                    android:id="@+id/u_backflip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/agencyfb"
                    android:text="34: STATUS SET"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/u_neckflip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/agencyfb"
                    android:text="120: REMARKS"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>